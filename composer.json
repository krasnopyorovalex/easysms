{
    "name": "krasnopyorovalex/easysms",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "~7.2",
        "doctrine/orm": "^2.7",
        "laminas/laminas-diactoros": "^2.3",
        "laminas/laminas-httphandlerrunner": "^1.1",
        "league/container": "^3.3",
        "league/fractal": "^0.19.2",
        "league/route": "^4.5",
        "symfony/console": "^5.0",
        "vlucas/phpdotenv": "^4.1"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.9",
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
